    }


</style>

<script>
    function myfun(x){
   document.querySelector('.low').style.visibility = "collapse"
   document.getElementById('id').src = x.src
   
   document.querySelector('.image-viewer').style.visibility = "visible"
   document.querySelector('.but').style.visibility = "visible"
   document.querySelector('.bottom').style.visibility = "collapse"
   document.querySelector('.top').style.visibility = "collapse"
    }

    document.querySelector('.close').addEventListener('click',()=>{
   document.querySelector('.image-viewer').style.visibility = "collapse"
   document.querySelector('.but').style.visibility = 'collapse'  
   document.querySelector('.low').style.visibility = "visible"
   document.getElementById('id').src = ""
   document.querySelector('.bottom').style.visibility = "visible"
   document.querySelector('.top').style.visibility = "visible"


        
    })

</script>