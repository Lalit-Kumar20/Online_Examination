<link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
<div class="top" style="width: 100%;display: flex;justify-content: end;flex-direction: row-reverse;margin-right: 40px;">
    <a href="/teacher/dashboard" class="button" style="width: 300px;height: 70px;">‚è™Dashboard</a>
 </div>
<div class="image-viewer" style="visibility: collapse;">
    <img src="" alt="" id = "id">
</div>
<div class="but" style="width: 100%; display: flex;justify-content: center;align-items: center;visibility: collapse;">
    <button class="close" style="position: fixed;cursor: pointer;"><i class="fas fa-times"></i></button>

</div>



<div class="low">

    <% for(let i = 0;i<ques.length;++i){ %>
    <div class="box">
        <h1 style="font-family: 'Ubuntu', sans-serif;font-size: 30px;color: #EFF8FF;">Q. <%= i+1 %>&nbsp; <%= ques[i].q %></h1>
        <% if(ques[i].type==="mcq") {%>
           <h4 style="font-family: 'Ubuntu', sans-serif;font-size: 30px;color: #EFF8FF;">a ) <%= ques[i].a %> </h4>
           <h4 style="font-family: 'Ubuntu', sans-serif;font-size: 30px;color: #EFF8FF;">b ) <%= ques[i].b %> </h4>
           <h4 style="font-family: 'Ubuntu', sans-serif;font-size: 30px;color: #EFF8FF;">c ) <%= ques[i].c %> </h4>
           <h4 style="font-family: 'Ubuntu', sans-serif;font-size: 30px;color: #EFF8FF;">d ) <%= ques[i].d %> </h4>
            <% } %>  
            <% if(ques[i].im==="yes"){ %>
                <% for(let j = 0;j<ques[i].img.length;++j){ %>
                    <img src="/<%=ques[i].img[j]%>" alt="" width="100" height="100" onclick="myfun(this)" class="im">
                    <% } %>  
                <% } %>
                <h3 style="font-family: 'Ubuntu', sans-serif;font-size: 35px;color: #EFF8FF;">Answer : -</h3>
              
                <% if( typeof ans[i]!=='undefined' && Object.keys(ans[i]).length!==0){ %>
                
                <h4 style="font-family: 'Ubuntu', sans-serif;font-size: 30px;color: #EFF8FF;"><%= ans[i].answer %> </h4>
                <% for(let j = 0;j<ans[i].img.length;++j){ %>
                    <img src="/<%= ans[i].img[j]%>" alt="" class = "im" width="100" height="100" onclick="myfun(this)">
                    <% } %>  
                <% } %>
                
        
    </div>
    <% } %>   
    
    
</div>

<br>
<br>
<div class="bottom">
    <form action="/teacher/view/<%= idd %>" method="POST">
        <input type="text"  class = "input100" name = "marks" placeholder="Marks" required>
        <button type="submit" class="button">Give marks</button>
    </form>

</div>

    

