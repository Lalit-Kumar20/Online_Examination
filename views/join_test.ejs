<link rel="icon" href="/logo.png" type="image/x-icon">
<title><%= test.name  %> </title>
<link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css"
   integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
<img src="/exam.png" style="transform: scale(0.7);" alt="" height="300" id="logo">
<div class="head" style="width: 100vw;transform: scale(0.8);">
   <h1 style="font-family: 'Ubuntu', sans-serif;font-size: 50px;color: #EFF8FF;float: left;" class="name">
      <%= test.name %> </h1>
   <h2 style="font-family: 'Ubuntu', sans-serif; font-size: 40px; color:#EFF8FF;float: right;" class="marks">Total marks
      : <%= test.total_marks %> </h2>

</div>

<div class="mid" style="width: 100vw;transform: scale(0.85);">
   <a href="/student/submit/<%= test.id %>" class="button" style="float: right;" id="sub">Submit Test</a>
</div>


<div class="low" style="width: 100vw;transform: scale(0.8);">
   
   <% for(let i = 0;i<test.questions.length;++i) { %>
      <div class="ques" style="width: 100vw;transform: scale(0.8); border: 3px solid #EFF8FF;padding: 30px; border-radius: 20px;">
         <div class="top" style="width: 100vw; display: flex;justify-content: space-between;">
            <h3 style="font-family: 'Ubuntu', sans-serif;font-size: 50px;color: #EFF8FF;">Q.) <%= test.questions[i].q %> </h3>
            <% if(Object.keys(ans.answers[i]).length!==0){ %>
             <h4 style="margin-right: 30px;font-family: 'Ubuntu', sans-serif;font-size: 50px;color: #EFF8FF;"><i class="fas fa-check-circle"></i></h4>
             <% } %>  
           
         </div> 
           <div class="test-mid" style="width: 100%;display: flex;">
            <a href="/student/dashboard/join/<%= test.id %>/<%= i %>" class="button">Answer</a>
            <a href="/student/dashboard/join/reset/<%= test.id %>/<%= i %>" class="button">Reset</a>
           
           </div>
          </div>
      <br>
      <br>
   
   <% } %>  




</div>


<style>
   .button {
      width: 400px;
      height: 100px;
      display: flex;
      border-radius: 30px;
      justify-content: center;
      background-color: #47597E;
      transition: ease-out 0.5s;
      font-size: 30px;
      transform: scale(0.8);
      font-family: 'Ubuntu', sans-serif;
      text-decoration: none;
      text-align: center;
      cursor: pointer;
      align-items: center;
      color: #DBE6FD;
   }

   .button:hover {

      color: #D1D9D9;
      background-color: #867AE9;
   }

   .image-viewer {
      width: 100%;
      height: 100%;
      position: fixed;
      top: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      transform: scale(0.8);

   }




   body {

      background-color: #192B40;
      display: flex;
      justify-content: center;
      flex-direction: column;
      align-items: center;
   }

   @media only screen and (max-width: 720px) {

      .name,
      .marks {
         float: none;
      }

      .marks {
         padding-right: 0;
      }

      .name {
         padding-left: 0;
      }

      .mid {
         display: flex;
         align-items: center;
         justify-content: center;
      }

      .head {
         display: flex;
         flex-direction: column;
         justify-content: center;
         align-items: center;
      }
   }
</style>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>